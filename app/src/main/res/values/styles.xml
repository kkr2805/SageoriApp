<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>

        <item name="colorSecondary">#2962FF</item>

        <item name="colorError">#F44336</item>

        <item name="android:colorBackground">@color/background</item>
        <item name="android:statusBarColor">@color/toolbarBackgroundThemeDark</item> <!--Status Bar의 배경색-->
        <item name="android:windowLightStatusBar">false</item> <!--Status Bar 아이콘의 색상 true:검은 아이콘, false:흰 아이콘-->
     
        <item name="toolbarStyle">@style/ToolbarStyle.Dark</item> <!--Toolbar 스타일-->
        <item name="actionMenuTextColor">@color/textThemeDark</item> <!--액션 메뉴의 텍스트 색상-->
        <item name="colorControlNormal">@color/textThemeDark</item> <!--홈/뒤로가기 버튼의 색상-->

    </style>

    <!--Toolbar 스타일-->
    <style name="ToolbarStyle.Dark" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/toolbarBackgroundThemeDark</item> <!-- Toolbar의 배경색-->
        <item name="titleTextAppearance">@style/ToolbarTitleStyle.Dark</item> <!-- Toolbar의 타이틀 텍스트-->
        <item name="subtitleTextAppearance">@style/ToolbarSubtitleStyle.Dark</item> <!-- Toolbar의 서브타이틀 텍스트-->
    </style>

    <!-- Toolbar의 타이틀 텍스트-->
    <style name="ToolbarTitleStyle.Dark" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/textThemeDark</item> <!-- Toolbar의 타이틀 텍스트 색상-->
        <item name="android:textSize">20dp</item> <!-- Toolbar의 타이틀 텍스트 사이즈-->
    </style>

    <!-- Toolbar의 서브타이틀 텍스트-->
    <style name="ToolbarSubtitleStyle.Dark" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textColor">@color/textThemeDark</item> <!-- Toolbar의 서브타이틀 텍스트 색상-->
        <item name="android:textSize">12dp</item> <!-- Toolbar의 서브타이틀 텍스트 사이즈-->
    </style>

</resources>
